.head_box .tool-box {
  height: 90rpx;
  padding: 0 30rpx;
  background: #f7f5f6;
}
.head_box .tool-box .count-box {
  font-size: 26rpx;
  color: #999;
}
.head_box .tool-box .count-box .all-num {
  color: #a8700d;
}
.head_box .tool-box .set-btn {
  background: none;
  font-size: 26rpx;
  color: #a8700d;
  margin: 0;
}
.empty-box {
  flex: 1;
  width: 100%;
  height: 100%;
}
.collect-list {
  background: #fff;
  width: 750rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 10rpx;
}
.collect-list .goods-wrap {
  position: relative;
}
.collect-list .goods-wrap .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  width: 440rpx;
  margin-bottom: 20rpx;
}
.collect-list .goods-wrap .order-sku .order-num {
  margin-right: 10rpx;
}
.collect-list .goods-wrap .order-price-box .status-btn {
  height: 32rpx;
  border: 1rpx solid #cfa972;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0 10rpx;
  margin-left: 20rpx;
  background: rgba(233, 183, 102, 0.16);
}
.collect-list .goods-wrap .order-price-box .order-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #ff0000;
}
.collect-list .goods-wrap .lose-box {
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
}
.collect-list .goods-wrap .lose-box .icon-yishixiao {
  position: absolute;
  bottom: 0rpx;
  right: 80rpx;
  font-size: 140rpx;
  line-height: 140rpx;
  color: #dbdbdb;
  -webkit-transform: rotate(-30deg);
          transform: rotate(-30deg);
}
.collect-list .goods-wrap .lose-box .invalid-tips {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 400rpx;
  height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.35);
}
.collect-list .tag-box .tag1 {
  line-height: 36rpx;
  padding: 0 8rpx;
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.9);
  background: #f39800;
  display: inline-block;
  box-sizing: border-box;
}
.collect-list .tag-box .tag2 {
  line-height: 34rpx;
  padding: 0 8rpx;
  font-size: 18rpx;
  color: rgba(243, 152, 0, 0.9);
  background: #fff;
  border-top: 1rpx solid #f39800;
  border-right: 1rpx solid #f39800;
  border-bottom: 1rpx solid #f39800;
  display: inline-block;
  box-sizing: border-box;
}
.collect-list .price-box {
  width: 420rpx;
}
.collect-list .price-box .price {
  color: #e1212b;
}
.tools-box {
  height: 100rpx;
  width: 750rpx;
  padding: 0 20rpx;
  background: #fff;
}
.tools-box .check-all {
  font-size: 26rpx;
}
.tools-box .check-all .check-all-radio {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
  color: #e9b564;
}
.tools-box .price {
  color: #ff0000;
  font-size: 500;
  margin-right: 30rpx;
}
.tools-box .pay-btn {
  width: 200rpx;
  line-height: 70rpx;
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  border-radius: 35rpx;
  padding: 0;
  color: rgba(255, 255, 255, 0.9);
}
.tools-box .del-btn {
  width: 200rpx;
  line-height: 70rpx;
  background: linear-gradient(90deg, #f44739 0%, #ff6600 100%);
  border-radius: 35rpx;
  padding: 0;
  color: rgba(255, 255, 255, 0.9);
}

