.hack-tabbar {
  height: calc(100rpx + env(safe-area-inset-bottom) / 2);
  width: 100%;
}
.content_box {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.wrapper-box {
  flex: 1;
  margin-top: 1rpx;
  height: 100%;
}
.scroll-box {
  height: 100%;
  flex: 1;
  background: #fff;
}
.left {
  width: 200rpx;
  height: 100%;
  flex: 1;
}
.left .list-active {
  background: #fff;
  color: #ffff !important;
}
.left .list-item {
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 14rpx;
}
.left .line-active {
  width: 180rpx;
  height: 64rpx;
  background: #e6b873;
  border-radius: 0rpx 32rpx 32rpx 0rpx;
  color: #fff;
}
.left .type-list {
  height: 100rpx;
  position: relative;
  width: 200rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}
.right {
  padding: 0 30rpx;
  flex: 1;
  height: 100%;
}
.right .type-img {
  width: 505rpx;
  height: 150rpx;
  background: #ccc;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.right .type-box {
  height: 84rpx;
}
.right .type-box .type-title {
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 16rpx;
}
.right .type-box .more {
  font-size: 26rpx;
  color: #999;
}
.right .item-list .item-box {
  flex-wrap: wrap;
}
.right .item-list .item-box .goods-item {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.right .item-list .item-box .goods-item:nth-child(3n) {
  margin-right: 0;
}
.right .item-list .item-box .goods-item .item-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
  background: #f5f5f5;
}
.right .item-list .item-box .goods-item .item-title {
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 150rpx;
  text-align: center;
}

