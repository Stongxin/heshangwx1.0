.hack-tabbar {
  height: calc(100rpx + env(safe-area-inset-bottom) / 2);
  width: 100%;
}
.content_box {
  margin-top: 1rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.wrapper-box {
  flex: 1;
  margin-top: 1rpx;
  height: 100%;
}
.scroll-box {
  height: 100%;
  flex: 1;
  background: #fff;
}
.left {
  width: 200rpx;
  height: 100%;
  flex: 1;
}
.left .list-active {
  background: #fff;
  color: #333333 !important;
  font-weight: bold !important;
}
.left .line-active {
  background: #e6b873;
}
.left .type-list {
  height: 84rpx;
  position: relative;
  width: 200rpx;
  padding-left: 16rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}
.left .type-list .line {
  width: 10rpx;
  height: 100%;
  position: absolute;
  left: 0;
}
.right {
  padding: 0 30rpx;
  flex: 1;
  height: 100%;
}
.right .type-img {
  width: 505rpx;
  height: 150rpx;
  background: #ccc;
  margin: 20rpx 0;
  border-radius: 10rpx;
}
.right .item-list .type-box {
  height: 84rpx;
}
.right .item-list .type-box .type-title {
  font-size: 28rpx;
  font-weight: bold;
}
.right .item-list .type-box .more {
  font-size: 26rpx;
  color: #999;
}
.right .item-list .item-box {
  flex-wrap: wrap;
  width: 504rpx;
}
.right .item-list .item-box .goods-item {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  background: #ffffff;
  box-shadow: 0px 0px 20rpx 4rpx rgba(199, 199, 199, 0.22);
  border-radius: 10rpx;
}
.right .item-list .item-box .goods-item:nth-child(2n) {
  margin-right: 0;
}
.right .item-list .item-box .goods-item .item-img {
  width: 245rpx;
  height: 246rpx;
  border-radius: 10rpx 10rpx 0px 0px;
  background: #f5f5f5;
}
.right .item-list .item-box .goods-item .item-title {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 10rpx;
  width: 200rpx;
  text-align: left;
  margin: 20rpx;
}
.right .item-list .item-box .goods-item .item-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff3000;
  text-align: left;
  width: 200rpx;
  margin: 0 20rpx 20rpx;
}
.right .item-list .item-box .goods-item .item-price::before {
  content: '￥';
  font-size: 22rpx;
}

