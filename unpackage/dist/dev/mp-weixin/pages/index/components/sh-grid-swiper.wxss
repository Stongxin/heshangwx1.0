.menu-category-box,
.menu-swiper-box {
  position: relative;
  background: #fff;
}
.menu-category-box .menu-swiper-item,
.menu-swiper-box .menu-swiper-item {
  background: #fff;
  height: 100%;
  width: 100%;
}
.menu-category-box .menu-tab-box .tab-list,
.menu-swiper-box .menu-tab-box .tab-list {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin: 20rpx 0;
}
.menu-category-box .menu-tab-box .tab-list .tab-img,
.menu-swiper-box .menu-tab-box .tab-list .tab-img {
  width: 98rpx;
  height: 98rpx;
  margin-bottom: 10rpx;
}
.menu-category-box .menu-category-dots,
.menu-swiper-box .menu-category-dots {
  display: flex;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 10rpx;
}
.menu-category-box .menu-category-dots .category-dot,
.menu-swiper-box .menu-category-dots .category-dot {
  width: 12rpx;
  height: 12rpx;
  background: #eeeeee;
  border-radius: 50%;
  margin-right: 10rpx;
}
.menu-category-box .menu-category-dots .category-dot-active,
.menu-swiper-box .menu-category-dots .category-dot-active {
  width: 12rpx;
  height: 12rpx;
  background: #e9b461;
  border-radius: 50%;
  margin-right: 10rpx;
}

