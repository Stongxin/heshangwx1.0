.sh-wallet-box {
  background: #fff;
  height: 180rpx;
  position: relative;
}
.sh-wallet-box .wallet-left {
  flex: 4;
}
.sh-wallet-box .wallet-right {
  position: relative;
}
.sh-wallet-box .wallet-right .cut-off--line {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 135rpx;
  width: 30rpx;
  height: 136rpx;
}
.sh-wallet-box .wallet-item {
  flex: 1;
}
.sh-wallet-box .wallet-item .wallet-img {
  width: 46rpx;
  height: 46rpx;
}
.sh-wallet-box .wallet-item .wallet-item__detail {
  font-size: 28rpx;
  width: 180rpx;
  text-align: center;
  font-weight: 500;
  color: #a8700d;
}
.sh-wallet-box .wallet-item .wallet-item__title {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 20rpx;
}
.sh-wallet-box .wallet-item .item-balance::after {
  content: '元';
  font-size: 16rpx;
  margin-left: 4rpx;
}
.sh-wallet-box .wallet-item .item-score::after {
  content: '个';
  font-size: 14rpx;
  margin-left: 4rpx;
}
.sh-wallet-box .wallet-item .item-coupon::after {
  content: '张';
  font-size: 16rpx;
  margin-left: 4rpx;
}

