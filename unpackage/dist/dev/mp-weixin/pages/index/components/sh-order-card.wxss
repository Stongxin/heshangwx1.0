.badge {
  position: absolute;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  line-height: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 100rpx;
  color: #fff;
  font-size: 24rpx;
  z-index: 9;
  background-color: #fa3534;
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
  -webkit-transform-origin: center center;
          transform-origin: center center;
  left: 100rpx;
  top: -6rpx;
  white-space: nowrap;
}
.sh-order-box {
  height: 180rpx;
  background: #fff;
}
.sh-order-box .order-box {
  flex: 4;
}
.sh-order-box .all-order {
  position: relative;
}
.sh-order-box .all-order .cut-off--line {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 135rpx;
  width: 30rpx;
  height: 136rpx;
}
.sh-order-box .order-item {
  flex: 1;
}
.sh-order-box .order-item .item-box {
  position: relative;
}
.sh-order-box .order-item .order-img {
  width: 46rpx;
  height: 46rpx;
}
.sh-order-box .order-item .item-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  line-height: 24rpx;
  margin-top: 20rpx;
}

