.address-box {
  background-color: #fff;
  padding: 0 30rpx;
}
.address-item {
  height: 96rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
  padding: 0 25rpx;
}
.address-item .item-title {
  color: #333;
  font-size: 28rpx;
  white-space: nowrap;
}
.address-item .inp {
  color: #333;
  font-size: 28rpx;
}
.area-box {
  min-height: 120rpx;
  padding-bottom: 60rpx;
  background: #fff;
  padding: 30rpx 25rpx;
}
.area-box .item-title {
  font-size: 28rpx;
  line-height: 28rpx;
  vertical-align: middle;
  white-space: nowrap;
}
.area-box .area-inp {
  color: #333;
  font-size: 28rpx;
  vertical-align: middle;
  margin-top: 8rpx;
  width: 550rpx;
}
.default-box {
  height: 100rpx;
  padding: 0 25rpx;
  background: #fff;
  margin-top: 20rpx;
}
