.page_box {
  background: #fff;
}
.page_box .head_box {
  width: 750rpx;
  height: 480rpx;
  background: linear-gradient(180deg, #efc480 0%, #f8dca5 40%, white 100%) no-repeat;
  position: relative;
}
.page_box .head_box .all-box {
  height: 360rpx;
  padding-bottom: 25px;
}
.page_box .head_box .all-box .all-num {
  font-size: 50rpx;
  font-weight: 500;
  color: #a8700d;
  margin-bottom: 20rpx;
}
.page_box .head_box .all-box .all-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #a8700d;
}
.page_box .head_box .all-box .score-card-bg {
  width: 100%;
  height: 90rpx;
}
.page_box .head_box .tab-box {
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 710rpx;
  height: 90rpx;
  background: white;
  border-radius: 30rpx 30rpx 0px 0px;
  border-bottom: 1rpx solid #dfdfdf;
  padding: 0 30rpx;
}
.page_box .head_box .tab-box .tab-item {
  flex: 1;
}
.page_box .head_box .tab-box .tab-item .tab-name {
  display: inline-block;
  font-size: 30rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: #333333;
  border-bottom: 4rpx solid transparent;
  line-height: 86rpx;
}
.page_box .head_box .tab-box .tab-item .tab-active {
  border-bottom: 4rpx solid #d5a65a;
}
.item-box {
  background: #fff;
  min-height: 150rpx;
  border-bottom: 1rpx solid #dfdfdf;
  padding: 30rpx;
}
.item-box .name {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 28rpx;
  margin-bottom: 20rpx;
}
.item-box .time {
  font-size: 24rpx;
  font-weight: 500;
  color: #c4c4c4;
  line-height: 24px;
}
.item-box .num {
  font-size: 30rpx;
  font-weight: 500;
  color: #e6b873;
}

