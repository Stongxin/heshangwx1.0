.groupon-wrap {
  background: url("https://lysmall.heshangsz.com/imgs/group/group_list_bg.png") no-repeat;
  background-size: 100% 374rpx;
}
.group-head {
  padding: 0 25rpx;
  height: 100rpx;
}
.group-head .group-head__title {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
}
.group-head .group-head__notice {
  font-size: 26rpx;
  font-weight: 500;
  color: white;
}
.group-box {
  width: 710rpx;
  background: linear-gradient(#fff, #f5f5f5);
  border-radius: 20rpx;
  margin: 0 auto;
  min-height: 800rpx;
}
.group-box .goods-item {
  border-radius: 20rpx;
  background-color: #fff;
}
.group-box .goods-item .big-goods {
  width: 710rpx;
  height: 260rpx;
  background: #ffffff;
  box-shadow: 0px 7rpx 8rpx 1rpx rgba(254, 76, 29, 0.05);
  border-radius: 20rpx;
  position: relative;
}
.group-box .goods-item .big-goods .goods-img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 6rpx;
}
.group-box .goods-item .big-goods .top-tag {
  position: absolute;
  z-index: 3;
  top: 20rpx;
  left: 20rpx;
  width: 84rpx;
  height: 36rpx;
}
.group-box .goods-item .big-goods .card-right {
  width: 430rpx;
  height: 220rpx;
}
.group-box .goods-item .big-goods .goods-title {
  font-size: 26rpx;
  font-weight: 600;
  width: 400rpx;
  color: #000000;
  vertical-align: middle;
}
.group-box .goods-item .big-goods .subtitle-text {
  font-size: 22rpx;
  width: 400rpx;
  font-weight: 500;
  color: #666666;
}
.group-box .goods-item .big-goods .buy-btn {
  width: 120rpx;
  line-height: 50rpx;
  background: linear-gradient(90deg, #ff6600 0%, #fe832a 100%);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.group-box .goods-item .big-goods .sell-box {
  background: rgba(249, 239, 214, 0.3);
  border-radius: 16rpx;
  line-height: 32rpx;
}
.group-box .goods-item .big-goods .sell-box .sell-num {
  font-size: 20rpx;
  font-weight: 400;
  color: #ff6904;
}
.group-box .goods-item .big-goods .sell-box .hot-icon {
  font-size: 26rpx;
  color: #ff6904;
  margin-right: 8rpx;
}
.group-box .goods-item .big-goods .group-num {
  font-size: 20rpx;
  font-weight: 500;
  color: #999999;
  margin-left: 20rpx;
}
.group-box .goods-item .big-goods .price {
  color: #ff0000;
  font-weight: 600;
}
.group-box .goods-item .big-goods .price::before {
  content: '￥';
  font-size: 20rpx;
}
.group-box .goods-item .big-goods .origin-price {
  color: #c4c4c4;
  font-size: 24rpx;
  text-decoration: line-through;
}
.group-box .goods-item .big-goods .origin-price::before {
  content: '￥';
  font-size: 20rpx;
}

