.order-nav {
  background: #fff;
  height: 80rpx;
}
.order-nav .nav-item {
  flex: 1;
}
.order-nav .nav-item .item-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 76rpx;
}
.order-nav .nav-item .nav-line {
  width: 120rpx;
  height: 4rpx;
  background: #fff;
}
.order-nav .nav-item .line-active {
  background: #e6b873;
}
.group-card {
  background: #fff;
  margin-top: 20rpx;
  position: relative;
  overflow: hidden;
}
.group-card .group-state {
  position: absolute;
  z-index: 2;
  top: -20rpx;
  right: -20rpx;
  width: 126rpx;
  height: 126rpx;
}
.group-card .goods-content {
  padding: 20rpx;
  position: relative;
}
.group-card .goods-content .group-num {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  margin-left: 30rpx;
}
.group-card .goods-content .sell-box {
  line-height: 32rpx;
  background: rgba(255, 224, 226, 0.3);
  border-radius: 16rpx;
  padding: 0 10rpx;
}
.group-card .goods-content .sell-box .icon-fire {
  color: #e1212b;
  font-size: 26rpx;
  margin-right: 10rpx;
}
.group-card .goods-content .sell-box .sell-num {
  font-size: 20rpx;
  color: #f7979c;
}
.group-card .btn-box {
  height: 95rpx;
  border-top: 1px solid rgba(223, 223, 223, 0.5);
  justify-content: flex-end;
}
.group-card .btn-box .invite-btn {
  width: 210rpx;
  line-height: 65rpx;
  border: 1rpx solid #a8700d;
  border-radius: 33rpx;
  font-size: 26rpx;
  color: #a8700d;
  padding: 0;
  margin-right: 20rpx;
  background: #fff;
}

