.seckill-list-wrap {
  background: url("https://lysmall.heshangsz.com/imgs/seckill/sekill_list_head_bg.png") no-repeat;
  background-size: 100% auto;
}
.tab-box .tab-item {
  flex: 1;
  height: 140rpx;
  color: rgba(255, 255, 255, 0.4);
  font-size: 32rpx;
  font-weight: 600;
}
.tab-box .tab-item .tab-line {
  width: 50rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 4rpx;
}
.tab-box .tab-active {
  color: white;
}
.scroll-box {
  background: linear-gradient(#fff, #f5f5f5);
  width: 710rpx;
  border-radius: 20rpx;
  margin: 0 auto;
}
.goods-item .big-goods {
  width: 710rpx;
  height: 260rpx;
  background: #ffffff;
  box-shadow: 0px 7rpx 8rpx 1rpx rgba(254, 76, 29, 0.05);
  border-radius: 20rpx;
}
.goods-item .big-goods .goods-img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 6rpx;
}
.goods-item .big-goods .card-right {
  width: 430rpx;
  height: 220rpx;
}
.goods-item .big-goods .goods-title {
  font-size: 26rpx;
  font-weight: 600;
  width: 400rpx;
  color: #000000;
}
.goods-item .big-goods .subtitle-text {
  font-size: 22rpx;
  width: 400rpx;
  font-weight: 500;
  color: #666666;
}
.goods-item .big-goods .buy-btn {
  width: 120rpx;
  line-height: 50rpx;
  background: linear-gradient(90deg, #d01325, #ed3c30);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.goods-item .big-goods .progress-text {
  color: #c4c4c4;
  font-size: 20rpx;
  margin-left: 25rpx;
}
.goods-item .big-goods .price {
  color: #ff0000;
  font-weight: 600;
}
.goods-item .big-goods .price::before {
  content: '￥';
  font-size: 20rpx;
}
.goods-item .big-goods .origin-price {
  color: #c4c4c4;
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-item .big-goods .origin-price::before {
  content: '￥';
  font-size: 20rpx;
}
.goods-item .buy-btn {
  width: 120rpx;
  line-height: 50rpx;
  background: linear-gradient(90deg, #d01325, #ed3c30);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.goods-item .btn-end,
.goods-item .btn-nostart {
  background: #eeeeee;
  color: #999999;
}
.goods-item .btn-ing {
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  color: white;
}

