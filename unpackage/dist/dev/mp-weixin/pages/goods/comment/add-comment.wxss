.goods-card {
  margin: 10rpx 0;
  padding: 20rpx;
  background: #fff;
}
.goods-card .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  width: 450rpx;
  margin-bottom: 20rpx;
}
.goods-card .order-sku .order-num {
  margin-right: 10rpx;
}
.goods-card .order-price-box .status-btn {
  height: 32rpx;
  border: 1rpx solid #cfa972;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0 10rpx;
  margin-left: 20rpx;
  background: rgba(233, 183, 102, 0.16);
}
.goods-card .order-price-box .order-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}
.form-item {
  background: #ffff;
  padding-bottom: 30rpx;
}
.form-item .star-box {
  height: 100rpx;
  padding: 0 25rpx;
}
.form-item .star-title {
  font-weight: 600;
}
.area-box {
  width: 690rpx;
  min-height: 306rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  padding: 28rpx;
  margin: auto;
}
.area-box .pl-style {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 42rpx;
}
.area-box .inp-area {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  line-height: 50rpx;
  width: 100%;
}
.area-box .img-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.post-btn {
  width: 690rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #f0c785, #f6d69d);
  border-radius: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
}

