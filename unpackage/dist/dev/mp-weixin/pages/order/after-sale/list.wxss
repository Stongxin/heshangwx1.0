.order-nav {
  background: #fff;
  height: 80rpx;
  border-top: 1rpx solid #f5f5f5;
}
.order-nav .nav-item {
  flex: 1;
}
.order-nav .nav-item .item-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 76rpx;
}
.order-nav .nav-item .nav-line {
  width: 100rpx;
  height: 4rpx;
  background: #fff;
}
.order-nav .nav-item .line-active {
  background: #e6b873;
}
.order-list {
  background: #fff;
  margin: 20rpx 0;
}
.order-list .order-bottom {
  padding-bottom: 20rpx;
}
.order-list .order-bottom .serve-status {
  height: 94rpx;
  background: #f6f6f6;
  border-radius: 4rpx;
  margin: 0 20rpx 20rpx;
  padding: 0 20rpx;
}
.order-list .order-bottom .serve-status .serve-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 30rpx;
}
.order-list .order-bottom .serve-status .serve-content {
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}
.order-list .order-bottom .btn-box {
  justify-content: flex-end;
}
.order-list .order-bottom .obtn {
  width: 160rpx;
  line-height: 60rpx;
  background: #eeeeee;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
  margin-right: 20rpx;
  padding: 0;
}
.order-list .order-head {
  padding: 0 25rpx;
  height: 77rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.order-list .order-head .no {
  font-size: 26rpx;
  color: #999;
}
.order-list .order-head .order-status .iconfont {
  color: #f83942;
  font-size: 30rpx;
  font-weight: 600;
}
.order-list .order-head .order-status .status-text {
  font-size: 26rpx;
  font-weight: 400;
  color: #f83942;
  margin-left: 10rpx;
}
.order-list .order-content {
  padding: 20rpx;
}
.order-list .order-content .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  width: 450rpx;
  margin-bottom: 20rpx;
}
.order-list .order-content .order-sku .order-num {
  margin-right: 10rpx;
}
.order-list .order-content .card-price-box .status-btn {
  height: 32rpx;
  border: 1rpx solid #cfa972;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0 10rpx;
  margin-left: 20rpx;
  background: rgba(233, 183, 102, 0.16);
}
.order-list .order-content .card-price-box .order-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}
.order-list .goods-order {
  border-bottom: 1px solid rgba(223, 223, 223, 0.5);
  padding: 20rpx 20rpx 0;
  margin-bottom: 20rpx;
}
.order-list .goods-bottom {
  background: #fff;
  padding-bottom: 30rpx;
}

