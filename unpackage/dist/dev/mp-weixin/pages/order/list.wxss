.order-nav {
  background: #fff;
  height: 80rpx;
}
.order-nav .nav-item {
  flex: 1;
}
.order-nav .nav-item .item-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 76rpx;
}
.order-nav .nav-item .nav-line {
  width: 100rpx;
  height: 4rpx;
  background: #fff;
}
.order-nav .nav-item .line-active {
  background: #e6b873;
}
.order-list {
  background: #fff;
  margin: 20rpx 0;
}
.order-list .order-bottom {
  padding-bottom: 20rpx;
}
.order-list .order-bottom .btn-box {
  justify-content: flex-end;
}
.order-list .order-bottom .all-msg {
  font-size: 24rpx;
  color: #999;
  justify-content: flex-end;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
}
.order-list .order-bottom .all-msg .all-unit {
  font-size: 20rpx;
}
.order-list .order-bottom .all-msg .all-money {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}
.order-list .order-bottom .all-msg .all-money::before {
  content: '￥';
  font-size: 20rpx;
}
.order-list .order-bottom .obtn1 {
  width: 160rpx;
  line-height: 60rpx;
  background: #eeeeee;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  margin-right: 20rpx;
  padding: 0;
}
.order-list .order-bottom .obtn2 {
  width: 160rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #fff;
  padding: 0;
}
.order-list .order-bottom .obtn3 {
  background: #ffeeee;
  color: #e50808;
  width: 160rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  padding: 0;
}
.order-list .order-head {
  padding: 0 25rpx;
  height: 77rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.order-list .order-head .no {
  font-size: 26rpx;
  color: #999;
}
.order-list .order-head .state {
  font-size: 26rpx;
  color: #a8700d;
}
.order-list .goods-order {
  border-bottom: 1px solid rgba(223, 223, 223, 0.5);
  padding: 20rpx 20rpx 0;
  margin-bottom: 20rpx;
}
.order-list .goods-order .order-content {
  padding-bottom: 20rpx;
}
.order-list .goods-order .order-content .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  width: 450rpx;
  margin-bottom: 20rpx;
}
.order-list .goods-order .order-content .order-sku .order-num {
  margin-right: 10rpx;
}
.order-list .goods-order .order-content .order-price-box .status-btn {
  height: 32rpx;
  border: 1rpx solid #cfa972;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0 10rpx;
  margin-left: 20rpx;
  background: rgba(233, 183, 102, 0.16);
}
.order-list .goods-order .order-content .order-price-box .order-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}

