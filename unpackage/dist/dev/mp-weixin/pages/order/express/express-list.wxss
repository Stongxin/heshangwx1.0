.tip-box {
  width: 750rpx;
  height: 84rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #a8700d;
  background: #ffe2b6;
}
.express-list {
  background-color: #fff;
}
.express-list .list-head {
  height: 76rpx;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
}
.express-list .list-head .list-status {
  font-size: 26rpx;
  font-weight: 500;
  color: #a8700d;
}
.express-list .list-head .express-name {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
}
.express-list .list-content .express-detail {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.express-list .list-content .goods-box {
  flex-wrap: wrap;
}
.express-list .list-content .goods-box .goods-img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 22rpx;
  margin-bottom: 22rpx;
}
.express-list .list-content .goods-box .goods-img-box:nth-child(4n) {
  margin-right: 0;
}
.express-list .list-content .goods-box .goods-img-box .goods-img {
  width: 100%;
  height: 100%;
}

