.feedback-wrap {
  background: #fff;
}
.form-item {
  margin-top: 30rpx;
}
.form-item .inp-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  align-items: center;
  margin-bottom: 30rpx;
}
.form-item .inp {
  width: 690rpx;
  height: 84rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 38rpx;
}
.form-item .area-inp {
  height: 190rpx;
  padding: 30rpx;
}
.form-item .pl-style {
  font-size: 26rpx;
  color: #b1b3c7;
}
.area-box {
  width: 690rpx;
  min-height: 306rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  padding: 20rpx;
}
.area-box .pl-style {
  font-size: 26rpx;
  font-weight: 500;
  color: #b1b3c7;
  line-height: 50rpx;
}
.area-box .inp-area {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  line-height: 50rpx;
  width: 100%;
}
.area-box .img-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.foot_box {
  height: 100rpx;
  width: 100%;
  margin-top: 100rpx;
}
.foot_box .contact-btn {
  width: 340rpx;
  line-height: 74rpx;
  background: linear-gradient(90deg, #676869, #525252);
  box-shadow: 0px 2rpx 5rpx 0px rgba(102, 103, 104, 0.46);
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
}
.foot_box .post-btn {
  width: 340rpx;
  line-height: 74rpx;
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0rpx rgba(229, 138, 0, 0.22);
  border-radius: 37rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
}

